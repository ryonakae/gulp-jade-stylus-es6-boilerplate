@import 'kouto-swiss'

@import '_config'

normalize()
box-sizing-reset()


body
  font-family 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, Arial, 'ヒラギノ角ゴ ProN W3', 'Hiragino Kaku Gothic ProN', 'メイリオ', Meiryo, sans-serif
  font-size $fontSize_default
  line-height $lineHeight_default
  letter-spacing $letterSpacing_default
  background-color $bgColor_default
  font-kerning normal
  color $textColor_default

  +retina-query(only screen, 2)
    -webkit-font-smoothing antialiased

  // +media-query($mq_tablet)
  // +media-query($mq_smartphone)


a
  color $textColor_link
  transition: all 300ms ease
  text-decoration none

  &:hover
    opacity 0.7
    text-decoration none